---
import Layout from '../layouts/Layout.astro';
const artistName = "NBA YoungBoy";
const artistDescription = "NBA YoungBoy, also known as YoungBoy Never Broke Again, is a highly influential rapper from Baton Rouge, Louisiana. Known for his emotive and raw lyrical style, NBA YoungBoy has captivated audiences with his music that often explores themes of struggle, pain, and resilience. His notable tracks include 'Outside Today' and 'No Smoke,' which have contributed to his significant impact on contemporary hip-hop. With a dedicated fan base and a prolific output, he stands as one of the defining voices of his generation.";
const videoEmbedUrl = "https://www.youtube.com/embed/5x7UGPDP3s8"; // Example video URL
---

<Layout title={artistName}>
  <div class="bg-gray-900 text-white min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-black bg-opacity-80 py-6">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-extrabold">{artistName}</h1>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-12">
      <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <img src="03f15e24a8f1931230f1569c90a4d937.jpg" alt={artistName} class="w-full h-96 object-cover" />
        <div class="p-6">
          <h2 class="text-3xl font-bold mb-4">{artistName}</h2>
          <p class="text-gray-300 text-lg">{artistDescription}</p>
        </div>

        <!-- Featured Video Section -->
        <section class="mt-12 bg-gray-800 rounded-lg shadow-lg p-6">
          <h3 class="text-3xl font-semibold mb-4 text-white-400">Featured Video</h3>
          <iframe 
            width="560" 
            height="315" 
            src={videoEmbedUrl} 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen 
            class="w-full rounded-lg shadow-lg">
          </iframe>
        </section>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-black bg-opacity-80 text-white py-4">
      <div class="container mx-auto px-4 text-center">
        <p>&copy; 2024 Music Page. All rights reserved.</p>
      </div>
    </footer>
  </div>
</Layout>



