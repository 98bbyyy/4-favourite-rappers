---
import Layout from '../layouts/Layout.astro';

const artistName = "NBA YoungBoy";
const artistDescription = "NBA YoungBoy, also known as YoungBoy Never Broke Again, is a highly influential rapper from Baton Rouge, Louisiana. Known for his emotive and raw lyrical style, NBA YoungBoy has captivated audiences with his music that often explores themes of struggle, pain, and resilience. His notable tracks include 'Outside Today' and 'No Smoke,' which have contributed to his significant impact on contemporary hip-hop. With a dedicated fan base and a prolific output, he stands as one of the defining voices of his generation.";
const videoEmbedUrl = "https://www.youtube.com/embed/nQ1mmVG-G1g"; // Updated embed URL
const notableAchievements = [
  "Multiple Billboard chart-topping singles.",
  "Collaborated with major artists like Lil Baby, DaBaby, and J. Cole.",
  "Over a billion views on YouTube, showcasing his massive online presence.",
  "Released multiple albums that debuted at #1 on the Billboard 200.",
  "Known for his prolific output, with several projects released each year.",
  "Viral hits on social media platforms, particularly TikTok.",
  "Strong influence on the next generation of hip-hop artists.",
  "Featured in major publications like Billboard, Rolling Stone, and Complex.",
  "Achieved over 10 million monthly listeners on Spotify.",
  "Recognized for his unique blend of trap and emotional rap."
];
const discographyHighlights = [
  "AI YoungBoy (2017)",
  "Until Death Call My Name (2019)",
  "Top (2020)",
  "Sincerely, Kentrell (2021)",
  "The Last Slimeto (2022)",
  "NBA YoungBoy 38 Baby 2 (2020)",
  "Still Flexin, Still Steppin (2020)",
  "Realer (2018)",
  "AI YoungBoy 2 (2020)",
  "Colors (2022)"
];
const socialMediaLinks = {
  twitter: "https://twitter.com/GGYOUNGBOY",
  instagram: "https://www.instagram.com/nba_youngboy/",
  facebook: "https://www.facebook.com/NBAYoungBoy"
};
---

<Layout title={artistName}>
  <div class="min-h-screen flex flex-col bg-gradient-to-r from-black to-white">
    <!-- Header -->
    <header class="bg-black bg-opacity-70 py-6">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-extrabold text-white">{artistName}</h1>
        <p class="text-lg text-white mt-2">The Voice of a Generation</p>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-12 flex space-x-8">
      
      <!-- Artist Info Section -->
      <section class="bg-black bg-opacity-70 rounded-lg shadow-lg overflow-hidden w-1/3">
        <img src="03f15e24a8f1931230f1569c90a4d937.jpg" alt={artistName} class="w-full h-48 object-cover" />
        <div class="p-6">
          <h2 class="text-4xl font-bold mb-4 text-white">{artistName}</h2>
          <p class="text-white text-lg mb-6">{artistDescription}</p>
        </div>
      </section>

      <!-- Notable Achievements Section -->
      <section class="bg-black bg-opacity-70 rounded-lg p-6 w-1/3">
        <h3 class="text-3xl font-semibold mb-4 text-white">Notable Achievements</h3>
        <ul class="list-disc list-inside text-white space-y-2">
          {notableAchievements.map(achievement => (
            <li>{achievement}</li>
          ))}
        </ul>
      </section>

      <!-- Discography Highlights Section -->
      <section class="bg-black bg-opacity-70 rounded-lg p-6 w-1/3">
        <h3 class="text-3xl font-semibold mb-4 text-white">Discography Highlights</h3>
        <ul class="list-disc list-inside text-white space-y-2">
          {discographyHighlights.map(album => (
            <li>{album}</li>
          ))}
        </ul>
      </section>
      
    </main>

    <main class="flex-grow container mx-auto px-4 py-12 flex space-x-8">

      <!-- Featured Video Section -->
      <section class="bg-black bg-opacity-70 rounded-lg shadow-lg p-6 w-full">
        <h3 class="text-3xl font-semibold mb-4 text-white">Featured Video</h3>
        <iframe 
          width="560" 
          height="315" 
          src={videoEmbedUrl} 
          frameborder="0" 
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
          allowfullscreen 
          class="w-full rounded-lg shadow-lg">
        </iframe>
      </section>

    </main>

    <!-- Social Media Links Section -->
    <section class="mt-12 bg-black bg-opacity-70 rounded-lg shadow-lg p-6 mb-8">
      <h3 class="text-3xl font-semibold mb-4 text-white">Connect with NBA YoungBoy</h3>
      <div class="flex justify-center space-x-4">
        <a href={socialMediaLinks.twitter} class="text-white hover:underline">Twitter</a>
        <a href={socialMediaLinks.instagram} class="text-white hover:underline">Instagram</a>
        <a href={socialMediaLinks.facebook} class="text-white hover:underline">Facebook</a>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black bg-opacity-70 text-white py-4">
      <div class="container mx-auto px-4 text-center">
        <p>&copy; 2024 Music Page. All rights reserved.</p>
      </div>
    </footer>
  </div>
</Layout>
