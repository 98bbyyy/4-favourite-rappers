---
import Layout from '../layouts/Layout.astro';
const artists = [
  {
    name: 'Fredo Bang',
    description: 'American rapper known for his distinct voice and energetic performances.',
    image: 'R.jpg',
    slug: 'fredo-bang'
  },
  {
    name: 'NBA Youngboy',
    description: 'Popular rapper with a large following and a gritty style.',
    image: 'OIP (3).jpg',
    slug: 'nba-youngboy'
  },
  {
    name: 'Tupac',
    description: 'Legendary rapper known for his impactful lyrics and social commentary.',
    image: '16868484016598.jpg',
    slug: 'tupac'
  },
  {
    name: 'Chris Brown',
    description: 'Versatile artist known for his singing, dancing, and high-energy performances.',
    image: 'OIP (2).jpg',
    slug: 'chris-brown'
  }
];
---

<Layout title="Welcome to Astro.">
  <section class="py-12 min-h-screen bg-gradient-to-r from-gray-900 to-gray-500">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center mb-12 text-white">My Favorite Artists</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {artists.map((artist, index) => (
          <div key={index} class="group bg-white rounded-lg shadow-lg overflow-hidden transform transition-transform duration-300 hover:scale-105 hover:shadow-xl cursor-pointer relative"
               onClick={() => document.getElementById(`modal-${index}`).classList.remove('hidden')}>
            <a href={`${artist.slug}`}>
              <img src={artist.image} alt={artist.name} class="w-full h-48 object-cover transform transition-transform duration-300 group-hover:scale-110" />
            </a>
            <div class="p-6">
              <h2 class="text-2xl font-semibold mb-2 text-gray-800">{artist.name}</h2>
              <p class="text-gray-600">{artist.description}</p>
            </div>
            <div id={`modal-${index}`} class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden"
                 onClick={(e) => {
                   if (e.target === e.currentTarget) {
                     document.getElementById(`modal-${index}`).classList.add('hidden');
                   }
                 }}>
              <div class="bg-white rounded-lg p-8 max-w-md mx-auto relative">
                <span class="absolute top-2 right-2 text-gray-600 cursor-pointer text-xl"
                      onClick={() => document.getElementById(`modal-${index}`).classList.add('hidden')}>&times;</span>
                <img src={artist.image} alt={artist.name} class="w-full h-64 object-cover mb-4" />
                <h2 class="text-2xl font-semibold mb-2 text-gray-800">{artist.name}</h2>
                <p class="text-gray-600">{artist.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
